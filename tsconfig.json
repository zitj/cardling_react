{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "es2015", "esnext"],
		"jsx": "react",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"*": ["*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
